generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  nik   String  @unique @id 
  nama  String
  jenis_kelamin String
  alamat String?
  tempat_lahir String
  tanggal_lahir String
  gol_darah String?
  rt String?
  rw String?
  kelurahan String?
  kecamatan String?
  agama String?
  status String?
  pekerjaan String?
  kewarganegaraan String?
  myrequests MyRequest[]
}

model MyRequest {
  no        Int    @unique @id @default(autoincrement())
  nik     String  
  nama   String
  skor String
  createdAt  DateTime   @default(now())
  finishedAt  DateTime   @updatedAt
  no_permintaan String
  profile    Person    @relation(fields: [nik], references: [nik])
  request Request @relation (fields: [no_permintaan], references: [no])
}

model Request {
  no        String    @unique @id 
  jenis_permintaan     String
  jumlah_customer Int  
  createdAt  DateTime   @default(now())
  finishedAt  DateTime   @updatedAt
  myrequests MyRequest[]
}

model KTP {
  id    Int     @id @default(autoincrement())
  user_name String @default("no_name")
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  image String
}

model Selfie {
  id    Int     @id @default(autoincrement())
  user_name String @default("no_name")
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  image String
}
