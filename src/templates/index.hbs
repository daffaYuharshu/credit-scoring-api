<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{id}}-{{nama}}-{{jenisPermintaan}} Report</title>
    <style>
      body { font-family: Arial, sans-serif; margin: 20px; background-color:
      #f4f4f4; } .container { background-color: #fff; padding: 20px;
      border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); } .header {
      text-align: center; border-bottom: 2px solid #ddd; margin-bottom: 20px; }
      .header h1 { margin: 0; font-size: 24px; } .personal-info, .result-section
      { margin-bottom: 20px; } .personal-info table, .result-section table {
      width: 100%; border-collapse: collapse; } .personal-info table td,
      .result-section table td { padding: 10px; border: 1px solid #ddd; } .score
      { text-align: center; margin-top: 20px; } .score .score-bar { width: 100%;
      height: 20px; background-color: #ddd; border-radius: 10px; overflow:
      hidden; margin: 10px 0; } .score .score-bar .fill { height: 100%;
      background-color: #4caf50; } .footer { text-align: center; margin-top:
      20px; } .images { display: flex; justify-content: space-between; } .images
      img { max-width: 48%; border: 1px solid #ddd; border-radius: 4px;
      max-height: fit-content; } .landscape { width: 70%; /* Ubah sesuai
      kebutuhan */ max-height: 150px; /* Ubah sesuai kebutuhan */ object-fit:
      cover; } .portrait { width: 25%; /* Ubah sesuai kebutuhan */ max-height:
      150px; /* Ubah sesuai kebutuhan */ object-fit: cover; }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>{{jenisPermintaan}}</h1>
      </div>
      <div class="personal-info">
        <table>
          <tr>
            <td>NIK</td>
            <td>{{nik}}</td>
          </tr>
          <tr>
            <td>Nama</td>
            <td>{{nama}}</td>
          </tr>
          <tr>
            <td>Jenis Kelamin</td>
            <td>{{jenisKelamin}}</td>
          </tr>
          <tr>
            <td>Alamat</td>
            <td>{{alamat}}</td>
          </tr>
          <tr>
            <td>Tempat Tanggal Lahir</td>
            <td>{{tempatLahir}}, {{tanggalLahir}}</td>
          </tr>
          <tr>
            <td>Agama</td>
            <td>{{agama}}</td>
          </tr>
          <tr>
            <td>Status Perkawinan</td>
            <td>{{status}}</td>
          </tr>
          <tr>
            <td>Pekerjaan</td>
            <td>{{pekerjaan}}</td>
          </tr>
          <tr>
            <td>Kewarganegaraan</td>
            <td>{{kewarganegaraan}}</td>
          </tr>
        </table>
      </div>
      <div class="result-section">
        <h3>Hasil Scan Upload</h3>
        <div class="images">
          <img src={{urlImageKTP}} alt="Hasil Scan KTP" class="landscape" />
          <img src={{urlImageSelfie}} alt="Hasil Verifikasi" class="portrait" />
        </div>
      </div>
      <div class="score">
        <h3>Nilai AI SCORE IDENTITAS</h3>
        <div class="score-bar">
          <div class="fill" style="width: {{skorFR}}%;"></div>
        </div>
        <p>{{skorFR}}% {{skor}}</p>
      </div>
      <div class="footer">
        <p>Hasil AI SCORE IDENTITAS: {{skorFR}}%</p>
      </div>
    </div>
  </body>
</html>